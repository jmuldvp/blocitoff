<h4>Add an item</h4>

<%= form_for [user, item] do |f| %>
  <div class="form-group">
    <%= f.label :item, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new to-do item." %>
  </div>
  <%= f.submit "Submit item", class: 'btn btn-default pull-right' %>
<% end %>
