<h1>User Information</h1>
<div class="row">
  <div class="col-md-4">
    <div class="media">
      <div class="media-body">
        User Name: <%= @user.email %><br />
        Sign in count: <%= @user.sign_in_count %><br />
        Account created: <%= @user.created_at %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description</th>
              <th>Complete</th>
            </tr>
          </thead>

          <tbody>
            <tr class='js-items'>
              <%= render @user.items %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= render partial:'items/form', locals: { user: @user, item: Item.new } %>
  </div>
</div>

<%#= render @user.items %>
